<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textAmountInstruction1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal|center"
        android:layout_weight="0.10"
        android:gravity="center"
        android:padding="2dp"
        android:text="please select the PIN"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/digit1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.25"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:nextFocusDown="@+id/digit2"
            android:nextFocusForward="@id/digit2"
            android:nextFocusLeft="@+id/digit4"
            android:nextFocusRight="@id/digit2"
            android:nextFocusUp="@id/digit4"
            android:text="0"
            android:textSize="46sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/digit2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.25"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:nextFocusDown="@id/digit1"
            android:nextFocusForward="@+id/digit3"
            android:nextFocusLeft="@id/digit1"
            android:nextFocusRight="@id/digit3"
            android:nextFocusUp="@id/digit3"
            android:text="0"
            android:textSize="46sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/digit3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.25"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:nextFocusDown="@id/digit2"
            android:nextFocusForward="@id/digit4"
            android:nextFocusLeft="@id/digit2"
            android:nextFocusRight="@id/digit4"
            android:nextFocusUp="@id/digit4"
            android:text="0"
            android:textSize="46sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/digit4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.25"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:nextFocusDown="@id/digit3"
            android:nextFocusForward="@id/digit1"
            android:nextFocusLeft="@id/digit3"
            android:nextFocusRight="@id/digit1"
            android:nextFocusUp="@id/digit1"
            android:text="0"
            android:textSize="46sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/textAmountInstruction3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_weight="0.10"
        android:gravity="center"
        android:padding="2dp"
        android:text="confirm by tapping"
        android:textSize="18sp" />

</LinearLayout>